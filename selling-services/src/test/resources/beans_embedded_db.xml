    <bean id="PersonCoreserviceRoute" class="com.ba.captwo.eda.demo.routes.PersonCoreserviceRoute"/>

    <camelContext id="PersonCoreserviceRouteContext" xmlns="http://camel.apache.org/schema/spring">
